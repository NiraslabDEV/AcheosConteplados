<div class="container">
  <h1 class="section-title">Cartas de Consórcio para Imóveis</h1>

  <!-- Tabela de Cartas -->
  <div class="table-container">
    <table class="data-table">
      <thead>
        <tr>
          <th>Administradora</th>
          <th>Crédito</th>
          <th>Entrada</th>
          <th>Parcelas</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% cartas.forEach(carta => { %>
        <tr>
          <td><%= carta.Consórcio %></td>
          <td><%= formatCurrency(carta['Valor da carta']) %></td>
          <td><%= formatCurrency(carta.Entrada) %></td>
          <td><%= carta['Fluxo de Pagamento'] %></td>
          <td>
            <a
              href="https://wa.me/5511952283170?text=<%= carta.whatsapp_msg %>"
              class="btn btn-whatsapp"
              data-tipo="Imóveis"
              data-credito="<%= formatCurrency(carta['Valor da carta']) %>"
              data-entrada="<%= formatCurrency(carta.Entrada) %>"
              data-parcelas="<%= carta['Fluxo de Pagamento'] %>"
              data-admin="<%= carta.Consórcio %>"
              target="_blank"
            >
              <i class="fab fa-whatsapp"></i>
              Contatar
            </a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
