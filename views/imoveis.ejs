<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Casas e Apartamentos Contemplados</h2>
    <a href="/" class="btn btn-custom">
      <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
  </div>

  <!-- Banner Section -->
  <div class="banner-section mb-5">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h3 class="mb-4">Encontre a Casa dos Seus Sonhos</h3>
        <p class="lead">
          Cartas de crédito contempladas com as melhores condições do mercado
          para você realizar o sonho da casa própria.
        </p>
      </div>
      <div class="col-lg-6">
        <img
          src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1073&q=80"
          alt="Casa dos sonhos"
          class="img-fluid rounded-3 shadow-lg"
        />
      </div>
    </div>
  </div>

  <!-- Tabela para telas médias e grandes -->
  <div class="table-responsive hide-on-small d-none d-sm-block">
    <table class="table table-striped">
      <thead>
        <tr>
          <% colunas.forEach(function(coluna) { %>
          <th><%= coluna %></th>
          <% }); %>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <% if (typeof cartas !== 'undefined' && cartas && cartas.length > 0) {
        %> <% cartas.forEach(function(carta, index) { %>
        <tr>
          <% colunas.forEach(function(coluna) { %>
          <td>
            <% if (coluna === "Valor da carta" || coluna === "Entrada") { %> <%=
            formatCurrency(carta[coluna]) %> <% } else if (coluna === "Fluxo de
            Pagamento" && carta[coluna]) { %> <%= carta[coluna] %> <% } else {
            %> <%= carta[coluna] || "" %> <% } %>
          </td>
          <% }); %>
          <td>
            <button
              class="btn btn-custom btn-sm"
              data-bs-toggle="modal"
              data-bs-target="#cartaModal<%= index %>"
            >
              Saiba Mais
            </button>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="<%= colunas.length + 1 %>" class="text-center">
            Nenhuma carta disponível no momento
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Visualização em cards para dispositivos móveis -->
  <div class="d-block d-sm-none">
    <% if (typeof cartas !== 'undefined' && cartas && cartas.length > 0) { %> <%
    cartas.forEach(function(carta, index) { %>
    <div class="card-view mb-4">
      <img
        src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1073&q=80"
        alt="Casa dos sonhos"
        class="card-img-top"
      />
      <% colunas.forEach(function(coluna) { %>
      <div class="card-row">
        <div class="card-label"><%= coluna %></div>
        <div class="card-value">
          <% if (coluna === "Valor da carta" || coluna === "Entrada") { %> <%=
          formatCurrency(carta[coluna]) %> <% } else if (coluna === "Fluxo de
          Pagamento" && carta[coluna]) { %> <%= carta[coluna] %> <% } else { %>
          <%= carta[coluna] || "" %> <% } %>
        </div>
      </div>
      <% }); %>
      <div class="text-center mt-3">
        <button
          class="btn btn-custom"
          data-bs-toggle="modal"
          data-bs-target="#cartaModal<%= index %>"
        >
          Saiba Mais
        </button>
      </div>
    </div>
    <% }); %> <% } else { %>
    <div class="alert alert-info">Nenhuma carta disponível no momento</div>
    <% } %>
  </div>

  <!-- Modais para cada carta -->
  <% if (typeof cartas !== 'undefined' && cartas && cartas.length > 0) { %> <%
  cartas.forEach(function(carta, index) { %>
  <div
    class="modal fade"
    id="cartaModal<%= index %>"
    tabindex="-1"
    aria-labelledby="cartaModalLabel<%= index %>"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="cartaModalLabel<%= index %>">
            Carta de Crédito - <%= carta["Consórcio"] || "Imóveis" %>
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="card mb-4">
            <div
              class="card-header"
              style="
                background: linear-gradient(135deg, #ff6b35 0%, #ff8c61 100%);
                color: white;
              "
            >
              <h5 class="mb-0">Detalhes da Carta</h5>
            </div>
            <div class="card-body">
              <% colunas.forEach(function(coluna) { %>
              <div class="row mb-2">
                <div class="col-5 fw-bold"><%= coluna %>:</div>
                <div class="col-7">
                  <% if (coluna === "Valor da carta" || coluna === "Entrada") {
                  %> <%= formatCurrency(carta[coluna]) %> <% } else if (coluna
                  === "Fluxo de Pagamento" && carta[coluna]) { %> <%=
                  carta[coluna] %> <% } else { %> <%= carta[coluna] || "Não
                  informado" %> <% } %>
                </div>
              </div>
              <% }); %>
            </div>
          </div>

          <form id="interesseForm<%= index %>" class="interesse-form">
            <div class="mb-3">
              <label for="nome<%= index %>" class="form-label">Nome *</label>
              <input
                type="text"
                class="form-control"
                id="nome<%= index %>"
                name="nome"
                required
              />
            </div>
            <div class="mb-3">
              <label for="telefone<%= index %>" class="form-label"
                >Telefone *</label
              >
              <input
                type="tel"
                class="form-control"
                id="telefone<%= index %>"
                name="telefone"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email<%= index %>" class="form-label">E-mail</label>
              <input
                type="email"
                class="form-control"
                id="email<%= index %>"
                name="email"
              />
            </div>
            <button
              type="button"
              class="btn btn-custom w-100 enviar-whatsapp"
              data-index="<%= index %>"
            >
              <i class="fab fa-whatsapp me-2"></i> Tenho Interesse (WhatsApp)
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% }); %> <% } %>
</div>

<style>
  .banner-section {
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c61 100%);
    color: white;
    padding: 50px;
    border-radius: 15px;
    margin-bottom: 30px;
  }

  .card-view {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .card-view:hover {
    transform: translateY(-5px);
  }

  .card-img-top {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-row {
    padding: 15px;
    border-bottom: 1px solid #eee;
  }

  .card-label {
    font-weight: bold;
    color: #666;
  }

  .btn-custom {
    background: white;
    color: #ff6b35;
    border: none;
    padding: 12px 24px;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-custom:hover {
    background: #ff6b35;
    color: white;
    transform: translateY(-2px);
  }
</style>

<!-- Script para enviar para WhatsApp -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const botoes = document.querySelectorAll(".enviar-whatsapp");

    botoes.forEach((botao) => {
      botao.addEventListener("click", function () {
        const index = this.getAttribute("data-index");
        const form = document.getElementById("interesseForm" + index);

        // Verifica validação do formulário
        if (!form.checkValidity()) {
          form.reportValidity();
          return;
        }

        const nome = document.getElementById("nome" + index).value;
        const telefone = document.getElementById("telefone" + index).value;
        const email =
          document.getElementById("email" + index).value || "Não informado";

        // Obter detalhes do modal atual
        const modalBody = form.closest(".modal-body");
        const detalhes = modalBody.querySelectorAll(".row.mb-2");

        // Montar a mensagem
        let mensagem = `*Olá! Tenho interesse nesta carta de crédito:*\n\n`;
        mensagem += `*Dados do Cliente:*\n`;
        mensagem += `Nome: ${nome}\n`;
        mensagem += `Telefone: ${telefone}\n`;
        mensagem += `Email: ${email}\n\n`;

        mensagem += `*Dados da Carta:*\n`;

        // Adicionar todos os detalhes da carta
        detalhes.forEach((detalhe) => {
          const label = detalhe.querySelector(".fw-bold").innerText;
          const valor = detalhe.querySelector(".col-7").innerText;
          mensagem += `${label} ${valor}\n`;
        });

        // Converter para URL
        const whatsappUrl = `https://wa.me/5511952283170?text=${encodeURIComponent(
          mensagem
        )}`;
        window.open(whatsappUrl, "_blank");
      });
    });
  });
</script>
