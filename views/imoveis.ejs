<div class="container mt-5">
  <h2 class="mb-4">Cartas de Crédito para Imóveis</h2>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Consórcio</th>
          <th>Valor da Carta</th>
          <th>Entrada</th>
          <th>Parcela</th>
          <th>Prazo</th>
          <th>Administradora</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <% if (typeof cartas !== 'undefined' && cartas) { %> <%
        cartas.forEach(function(carta) { %>
        <tr>
          <td><%= carta.Consórcio %></td>
          <td><%= formatCurrency(carta['Valor da carta']) %></td>
          <td><%= formatCurrency(carta.Entrada) %></td>
          <td><%= formatCurrency(carta.Parcela) %></td>
          <td><%= carta.Prazo %></td>
          <td><%= carta.Administradora %></td>
          <td>
            <button
              class="btn btn-primary btn-sm"
              data-bs-toggle="modal"
              data-bs-target="#saibaMaisModal"
            >
              Saiba Mais
            </button>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="7" class="text-center">
            Nenhuma carta disponível no momento
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
