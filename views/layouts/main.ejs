<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Consórcios Balsa</title>
    <link rel="stylesheet" href="/static/css/style.css" />
    <link rel="stylesheet" href="/static/css/style-fixed.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <%- include('../base') %> <%- content %>

    <!-- Modal -->
    <div
      class="modal fade"
      id="saibaMaisModal"
      tabindex="-1"
      aria-labelledby="saibaMaisModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="saibaMaisModalLabel">
              Carta de Crédito Contemplada
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="interesseForm" action="/enviar-interesse" method="POST">
              <div class="mb-3">
                <label for="nome" class="form-label">Nome *</label>
                <input
                  type="text"
                  class="form-control"
                  id="nome"
                  name="nome"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="telefone" class="form-label">Telefone *</label>
                <input
                  type="tel"
                  class="form-control"
                  id="telefone"
                  name="telefone"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                />
              </div>
              <button type="submit" class="btn btn-primary w-100">
                Tenho Interesse
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <header class="header">
      <div class="container">
        <a href="/" class="logo"> Consórcios <span>Premium</span> </a>
        <nav>
          <a href="/imoveis">Imóveis</a>
          <a href="/veiculos">Veículos</a>
          <a
            href="https://wa.me/5511952283170"
            class="btn-whatsapp"
            target="_blank"
          >
            <i class="fab fa-whatsapp"></i>
            Fale Conosco
          </a>
        </nav>
      </div>
    </header>

    <!-- Conteúdo principal -->
    <main class="main"><%- content %></main>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-info">
            <h3>Consórcios Premium</h3>
            <p>Sua melhor opção em consórcios contemplados</p>
          </div>
          <div class="footer-contact">
            <h4>Entre em Contato</h4>
            <a href="https://wa.me/5511952283170" target="_blank">
              <i class="fab fa-whatsapp"></i>
              (11) 95228-3170
            </a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/static/js/main.js"></script>
  </body>
</html>
