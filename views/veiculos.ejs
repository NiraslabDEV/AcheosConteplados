                          <%= carta[coluna] %>
                        </span>
                        <% } else if (coluna === "Valor da carta" || coluna ===
                        "Entrada") { %>
                        <span class="fw-bold"
                          ><%= formatCurrency(carta[coluna + "_num"]) %></span
                        >
                        <% if (index < 5 && coluna === "Entrada") { %>
                        <div>
                          <small class="badge bg-warning text-dark mt-1"
                            >Melhor Custo/Benefício</small
                          >
                        </div>
                        <% } %> <% } else if (coluna === "Fluxo de Pagamento" &&
                        carta[coluna]) { %> <% var partes =
                        carta[coluna].split(/(\d+\s*x\s*R\$\s*[\d,.]+)/g);
                        partes = partes.filter(p =>
                        p.trim().match(/\d+\s*x\s*R\$\s*[\d,.]+/)); %> <%
                        partes.forEach(function(parte, pIndex) { %> <%=
                        parte.trim() %><% if (pIndex < partes.length - 1) {
                        %><br /><% } %> <% }); %> <% } else { %> <%=
                        carta[coluna] || "Não informado" %> <% } %>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <% if (carta.Status.toLowerCase() === 'disponível') { %>
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white py-3">
              <h5 class="mb-0 fw-bold">
                <i class="fas fa-user me-2"></i>Tenho Interesse
              </h5>
            </div>
            <div class="card-body p-4">
              <form id="interesseForm<%= index %>" class="interesse-form">
                <div class="mb-3">
                  <label for="nome<%= index %>" class="form-label"
                    >Nome Completo *</label
                  >
                  <div class="input-group">
                    <span class="input-group-text"
                      ><i class="fas fa-user"></i
                    ></span>
                    <input
                      type="text"
                      class="form-control"
                      id="nome<%= index %>"
                      name="nome"
                      placeholder="Digite seu nome completo"
