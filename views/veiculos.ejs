                    <span class="input-group-text"
                      ><i class="fas fa-phone"></i
                    ></span>
                    <input
                      type="tel"
                      class="form-control"
                      id="telefone<%= index %>"
                      name="telefone"
                      placeholder="(00) 00000-0000"
                      required
                    />
