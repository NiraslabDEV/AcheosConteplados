<div class="container mt-4" id="oportunidades">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <span class="badge bg-orange mb-2">EXCLUSIVO</span>
      <h2 class="text-orange fw-bold mb-0">Melhores Oportunidades de Carros</h2>
      <p class="text-muted">
        Organizadas por melhor custo-benefício -
        <strong>Atualizado hoje</strong>
      </p>
    </div>
    <div>
      <a href="/imoveis" class="btn btn-outline-orange me-2">
        <i class="fas fa-home me-2"></i>Ver Imóveis
      </a>
      <a href="/" class="btn btn-outline-orange">
        <i class="fas fa-arrow-left me-2"></i>Voltar
      </a>
    </div>
  </div>

  <!-- Tabela para telas médias e grandes -->
  <div class="table-responsive hide-on-small d-none d-sm-block">
    <table class="table table-striped table-hover table-opportunities">
      <thead>
        <tr>
          <% colunas.forEach(function(coluna) { %>
          <th><%= coluna %></th>
          <% }); %>
          <th class="text-center">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% if (typeof cartas !== 'undefined' && cartas && cartas.length > 0) {
        %> <% cartas.forEach(function(carta, index) { %>
        <tr class="<%= index < 5 ? 'featured-opportunity' : '' %>">
          <% colunas.forEach(function(coluna) { %>
          <td
            class="<%= coluna === 'Entrada' || coluna === 'Valor da carta' || coluna === 'Razão Investimento' ? 'fw-bold' : '' %>"
          >
            <% if (coluna === "Status") { %>
            <span
              class="badge <%= carta[coluna].toLowerCase() === 'disponível' ? 'bg-success' : 'bg-danger' %>"
            >
              <%= carta[coluna] %>
            </span>
            <% } else if (coluna === "Valor da carta" || coluna === "Entrada") {
            %> <%= formatCurrency(carta[coluna + "_num"]) %> <% if (index < 5 &&
            coluna === "Entrada") { %>
            <span class="badge bg-warning text-dark"
              >Melhor Custo/Benefício</span
            >
            <% } %> <% } else if (coluna === "Razão Investimento") { %>
            <span class="score-value"><%= carta[coluna] %></span>
            <% } else if (coluna === "Fluxo de Pagamento" && carta[coluna]) { %>
            <% var partes = carta[coluna].split(/(\d+\s*x\s*R\$\s*[\d,.]+)/g);
            partes = partes.filter(p =>
            p.trim().match(/\d+\s*x\s*R\$\s*[\d,.]+/)); %> <%
            partes.forEach(function(parte, index) { %> <%= parte.trim() %><% if
            (index < partes.length - 1) { %><br /><% } %> <% }); %> <% } else {
            %> <%= carta[coluna] || "" %> <% } %>
          </td>
          <% }); %>
          <td class="text-center">
            <button
              class="btn <%= index < 5 ? 'btn-orange' : 'btn-primary' %> <%= carta.Status.toLowerCase() === 'indisponível' ? 'disabled' : '' %>"
              data-bs-toggle="modal"
              data-bs-target="#cartaModal<%= index %>"
            >
              <i
                class="fas <%= index < 5 ? 'fa-star' : 'fa-info-circle' %> me-2"
              ></i>
              Saiba Mais
            </button>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="<%= colunas.length + 1 %>" class="text-center">
            Nenhuma carta disponível no momento
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Visualização em cards para dispositivos móveis -->
  <div class="d-block d-sm-none">
    <% if (typeof cartas !== 'undefined' && cartas && cartas.length > 0) { %> <%
    cartas.forEach(function(carta, index) { %>
    <div class="card-view mb-4 <%= index < 5 ? 'featured-card' : '' %>">
      <% if (index < 5) { %>
      <div class="top-opportunity-badge">TOP OPORTUNIDADE</div>
      <% } %> <% colunas.forEach(function(coluna) { %>
      <div class="card-row">
        <div class="card-label"><%= coluna %></div>
        <div class="card-value">
          <% if (coluna === "Status") { %>
          <span
            class="badge <%= carta[coluna].toLowerCase() === 'disponível' ? 'bg-success' : 'bg-danger' %>"
          >
            <%= carta[coluna] %>
          </span>
          <% } else if (coluna === "Valor da carta" || coluna === "Entrada") {
          %> <%= formatCurrency(carta[coluna + "_num"]) %> <% if (index < 5 &&
          coluna === "Entrada") { %>
          <div>
            <small class="badge bg-warning text-dark mt-1"
              >Melhor Custo/Benefício</small
            >
          </div>
          <% } %> <% } else if (coluna === "Razão Investimento") { %>
          <span class="score-value"><%= carta[coluna] %></span>
          <% } else if (coluna === "Fluxo de Pagamento" && carta[coluna]) { %>
          <% var partes = carta[coluna].split(/(\d+\s*x\s*R\$\s*[\d,.]+)/g);
          partes = partes.filter(p =>
          p.trim().match(/\d+\s*x\s*R\$\s*[\d,.]+/)); %> <%
          partes.forEach(function(parte, index) { %> <%= parte.trim() %><% if
          (index < partes.length - 1) { %><br /><% } %> <% }); %> <% } else { %>
          <%= carta[coluna] || "" %> <% } %>
        </div>
      </div>
      <% }); %>
      <div class="text-center mt-3">
        <button
          class="btn <%= index < 5 ? 'btn-orange' : 'btn-primary' %> btn-lg w-100 <%= carta.Status.toLowerCase() === 'indisponível' ? 'disabled' : '' %>"
